/* pages/add/add.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.form-group {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #fff;
}

.radio-group {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.radio {
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.btn-area {
  margin: 48rpx 0;
  padding: 0 30rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  background: #07c160;
  color: #fff;
}

.submit-btn[loading] {
  opacity: 0.7;
}

/* 输入框激活状态 */
.input:focus {
  border-color: #07c160;
}

/* 适配 iPhone X 等机型底部区域 */
.safe-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}