<view class="container">
  <view class="header">
    <image class="logo" src="/images/logo.png" mode="aspectFit"></image>
    <text class="title">学生信息查询系统</text>
  </view>

  <view class="search-box">
    <input class="input" type="text" placeholder="请输入学号" bindinput="onInputChange" value="{{studentId}}" maxlength="20"/>
    <button class="search-btn {{loading ? 'loading' : ''}}" type="primary" bindtap="searchStudent" disabled="{{loading}}">
      <text>{{loading ? '查询中...' : '查询'}}</text>
    </button>
  </view>
  
  <view class="result-container {{studentInfo || (!firstSearch && showNoData) ? 'show' : ''}}">
    <view class="result-box {{studentInfo ? 'show' : ''}}" wx:if="{{studentInfo}}">
      <view class="info-item">
        <text class="label">学号：</text>
        <text class="value">{{studentInfo.studentId}}</text>
      </view>
      <view class="info-item">
        <text class="label">姓名：</text>
        <text class="value">{{studentInfo.name}}</text>
      </view>
      <view class="info-item">
        <text class="label">性别：</text>
        <text class="value">{{studentInfo.gender}}</text>
      </view>
      <view class="info-item">
        <text class="label">专业：</text>
        <text class="value">{{studentInfo.major}}</text>
      </view>
      <view class="info-item">
        <text class="label">班级：</text>
        <text class="value">{{studentInfo.className}}</text>
      </view>
      <view class="info-item">
        <text class="label">电话：</text>
        <text class="value">{{studentInfo.phone}}</text>
      </view>
      <view class="info-item">
        <text class="label">邮箱：</text>
        <text class="value">{{studentInfo.email}}</text>
      </view>
    </view>

    <view class="no-data {{(!firstSearch && showNoData) ? 'show' : ''}}" wx:if="{{!firstSearch && showNoData}}">
      <icon type="info" size="64"></icon>
      <text>未找到该学生信息</text>
    </view>
  </view>
</view> 