.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.search-box {
  display: flex;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.search-btn.loading {
  opacity: 0.8;
}

.result-container {
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
}

.result-container.show {
  opacity: 1;
  transform: translateY(0);
}

.result-box {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
}

.result-box.show {
  opacity: 1;
  transform: translateY(0);
}

.info-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  animation: fadeIn 0.3s ease forwards;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  width: 120rpx;
  color: #666;
  font-size: 28rpx;
}

.value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
}

.no-data.show {
  opacity: 1;
  transform: translateY(0);
}

.no-data icon {
  margin-bottom: 20rpx;
}

.no-data text {
  color: #999;
  font-size: 28rpx;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 