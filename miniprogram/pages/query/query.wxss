/* pages/query/query.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.search-box {
  display: flex;
  margin-bottom: 30rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  padding: 0;
}

.result-box {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.result-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  font-size: 28rpx;
}

.result-item:last-child {
  border-bottom: none;
}

.label {
  width: 120rpx;
  color: #666;
}

.value {
  flex: 1;
  color: #333;
}

.reset-btn {
  margin-top: 40rpx;
  width: 100%;
}